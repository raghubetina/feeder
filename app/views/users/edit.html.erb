<%= form_for @user do |f| %>
<%= f.text_field :email, :placeholder => "Enter your email" %>
<%= f.password_field :password, :placeholder => "Choose a new password" %>
<%= f.password_field :password_confirmation, :placeholder => "Re-enter your new password" %>
<%= f.text_field :name, :placeholder => "Display name" %>
<%= f.submit "Save Changes" %>
<% end %>